<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutCourse"
        android:background="@drawable/buttoncourselist"
        >
    <RelativeLayout android:layout_width="match_parent"
                    android:id="@+id/layoutCourseHigh"
                    android:layout_height="60dp">

        <ImageView android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:src="@drawable/course2"
                   android:id="@+id/imageCourse"
                   android:layout_centerVertical="true"
                   android:layout_alignParentLeft="true"
                />

        <TextView
                android:id="@+id/courseName"
                android:layout_toRightOf="@id/imageCourse"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:textColor="#ff65a8ff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="txt"
                android:textSize="18sp"/>
        <TextView
                android:id="@+id/courseAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/courseName"
                android:layout_below="@+id/courseName"
                android:textColor="#9c9e98"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="50dp"
                android:text="txt"
                android:textSize="15sp"/>

        <Button android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/btnLight"
                android:background="@drawable/buttonlight"
                android:layout_toLeftOf="@+id/courseName"
                android:onClick="onDetailHandle"
                android:focusable="false"
                android:layout_marginRight="10dp"
                android:focusableInTouchMode="false"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <!--<LinearLayout android:layout_width="match_parent"-->
                  <!--android:layout_below="@+id/layoutCourseHigh"-->
                  <!--android:background="@drawable/bordernotifi"-->
                  <!--android:layout_height="wrap_content"-->
                  <!-->-->
        <!--<TextView android:layout_width="wrap_content" android:layout_height="3dp"/>-->
    <!--</LinearLayout>-->
</RelativeLayout>